<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="#ffffff"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/paper"
        android:scaleType="centerCrop"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_textpaper_title"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="title"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image" />

    <TextView
        android:id="@+id/tv_textpaper_create"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="createTime"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/image"
        android:layout_below="@+id/tv_textpaper_title"/>

    <TextView
        android:id="@+id/tv_textpaper_ending"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="endingTime"
        android:textSize="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/tv_textpaper_create"
        android:layout_toEndOf="@+id/image" />

</RelativeLayout>