<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnyWork.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="AnyWork.Theme.TextView1" parent="Base.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AnyWork.Theme.TextView2" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/AnyWork_accent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AnyWork.Theme.EditText1" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/AnyWork_accent</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@color/AnyWork_light</item>
    </style>

    <style name="AnyWork.Theme.EditText2" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="AnyWork.Theme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing_big</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AnyWork.Theme.Text.Body" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_textView</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AnyWork.Theme.EditText.Body" parent="AnyWork.Theme.Text.Body">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="AnyWork.Theme.Icon">
        <!--<item name="android:layout_margin">10dp</item>-->
    </style>

    <style name="AnyWork.Theme.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium.Scaled" parent="AnyWork.Theme.Icon.Medium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="AnyWork.Theme.Icon.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <style name="AnyWork.Theme.Button.Scaled" parent="AnyWork.Theme.Button">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

</resources>
