<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/status_dark</item>
        <item name="colorPrimaryDark">@color/toolbar_dark</item>
        <item name="colorAccent">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AnyWork.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:statusBarColor">#0277BD</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:titleTextAppearance">@style/AnyWork.Theme.TextAppearance.Title</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <style name="AnyWork.Theme.TextAppearance.Title" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="AnyWork.Theme.TextAppearance.Title.Inverse" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AnyWork.Theme.Text.Body" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_textView</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AnyWork.Theme.EditText.Body" parent="AnyWork.Theme.Text.Body">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AnyWork.Theme.Icon">
        <!--<item name="android:layout_margin">10dp</item>-->
    </style>

    <style name="AnyWork.Theme.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AnyWork.Theme.Icon.Medium.Scaled" parent="AnyWork.Theme.Icon.Medium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="AnyWork.Theme.Icon.Small">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AnyWork.Theme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing_big</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AnyWork.Theme.Button.Scaled" parent="AnyWork.Theme.Button">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

</resources>
